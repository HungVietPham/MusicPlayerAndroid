<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:text="@string/reward_points_count_text" />

    <TextView
        android:id="@+id/text_view_reward_points_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_static"
        android:layout_centerHorizontal="true"
        android:text="100"
        android:textColor="@color/reward_points_count"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/reward_dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_reward_points_count"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:text="@string/reward_dialog_content" />


</RelativeLayout>